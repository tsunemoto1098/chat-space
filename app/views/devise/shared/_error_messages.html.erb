<% if resource.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= I18n.t("errors.posts.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </h2>
    <ul>
      <% resource.errors.full_posts.each do |post| %>
        <li><%= post %></li>
      <% end %>
    </ul>
  </div>
<% end %>
